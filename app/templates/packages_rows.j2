{% for package in packages %}
<tr  x-show="search === '' || '{{package.name}}'.toLowerCase().includes(search.toLowerCase()) || '{{package.identifier}}'.toLowerCase().includes(search.toLowerCase()) || '{{package.publisher}}'.toLowerCase().includes(search.toLowerCase())"
    x-cloak>


    <td class="px-4 py-4 text-md whitespace-nowrap">
        <h4 class=" font-semibold ">{{ package.name }}</h4>
    </td>
    <td class="px-4 py-4 text-md whitespace-nowrap">
        <h4 class=" ">{{ package.identifier }}</h4>
    </td>

    <td class="px-4 py-4 text-md whitespace-nowrap">
        <h4 @click="search = '{{ package.publisher }}'"
            class=" hover:font-bold cursor-pointer transition-[font-weight] duration-300 ">
            {{ package.publisher }}</h4>
    </td>

    <td class="pl-3 py-4 text-sm font-medium whitespace-nowrap">
        <div
            class="inline px-3 py-1  text-sm font-normal rounded-full  gap-x-2 {{ 'bg-emerald-100/60 dark:bg-emerald-700/60 text-emerald-500 dark:text-emerald-300' if package.versions|length > 0 else 'bg-red-100/60 dark:bg-red-700/60 text-red-500 dark:text-red-300' }}  ">
            {{ 'Version ' + (package.versions|sort_versions)[0].version_code if package.versions|length >
            0 else 'No versions' }}
        </div>
    </td>

    <td class="px-4 py-4 text-sm whitespace-nowrap flex flex-row gap-x-1 justify-center">
        <a href="{{ url_for('ui.package', identifier=package.identifier) }}"
            class="px-1 group  py-1 text-gray-500 transition-colors hover:bg-gray-100 dark:hover:bg-neutral-800/60 duration-300 rounded-lg  ">
            <?xml version="1.0" ?>
            <svg class="feather feather-edit group-hover:stroke-gray-200 transition-color duration-300" fill="none" height="24" stroke="currentColor" stroke-linecap="round"
                stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="24"
                xmlns="http://www.w3.org/2000/svg">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
            </svg>
        </a>
        <a hx-delete="{{ url_for('ui.package', identifier=package.identifier)}}" hx-confirm="Are you sure you want to delete {{ package.identifier }} and all of its versions and installers?"
            class="px-1 group py-1 text-gray-500 transition-colors hover:bg-red-100 dark:hover:bg-neutral-800/60 duration-300 rounded-lg cursor-pointer">

            <?xml version="1.0" ?>
            <svg class="feather feather-edit group-hover:stroke-red-500 transition-color duration-300" fill="none" height="24" stroke="currentColor" stroke-width="1.5"
                viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0">
                </path>
            </svg>
        </a>

    </td>
</tr>
{% endfor %}