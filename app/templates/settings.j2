{% extends "base.j2" %}
{% set title = "Settings" %}
{% block content %}
<h1 class="text-3xl font-medium text-gray-800 dark:text-gray-200">{{title}}</h1>

<div class="flex-grow"></div>
    <table class="w-min">
        <tr>
            <td class="w-min">
                <p class="dark:text-gray-200">
                    Version:
                </p>
            </td>
            <td class="pl-2 mr-auto flex flex-row gap-x-2">
                <p class="dark:text-gray-200">
                    {{ config.VERSION  }} 
                </p>
                <p class="dark:text-gray-200">
                ({{ 'Beta' if (config.VERSION.split('.')[0]|int) < 1 else 'Stable' }})
                </p>
            </td>
        </tr>
    </table>


{% endblock %}